<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <corners
        android:radius="50dp"
        />
    <gradient
        android:angle="135"
        android:centerX="35%"
        android:centerColor="#aa0000"
        android:startColor="#330000"
        android:endColor="#FF0000"
        android:type="linear"
        />
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        />
    <size
        android:width="0dp"
        android:height="0dp"
        />
    <stroke
        android:width="3dp"
        android:color="#878787"
        />
</shape>
